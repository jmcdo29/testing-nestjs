{
  "name": "testing-nestjs",
  "version": "0.0.1",
  "description": "A repository to show off to the community methods of testing NestJS including Unit Tests, Integration Tests, E2E Tests, pipes, filters, interceptors, GraphQL, Mongo, TypeORM, and more!",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jmcdo29/testing-nestjs.git"
  },
  "keywords": [
    "Nest",
    "Testing",
    "Jest",
    "Test",
    "Unit",
    "E2E",
    "e2e",
    "integration",
    "NestJS"
  ],
  "author": "Jay McDoniel <jmcdo29@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jmcdo29/testing-nestjs/issues"
  },
  "homepage": "https://github.com/jmcdo29/testing-nestjs#readme",
  "scripts": {
    "commit": "git-cz",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"apps/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "./scripts/test-e2e"
  },
  "dependencies": {
    "@nestjs/common": "^7.1.3",
    "@nestjs/config": "^0.5.0",
    "@nestjs/core": "^7.1.3",
    "@nestjs/cqrs": "^7.0.0",
    "@nestjs/graphql": "^7.4.1",
    "@nestjs/microservices": "^7.1.3",
    "@nestjs/mongoose": "^7.0.1",
    "@nestjs/platform-express": "^7.1.3",
    "@nestjs/platform-socket.io": "^7.1.3",
    "@nestjs/serve-static": "^2.1.1",
    "@nestjs/typeorm": "^7.1.0",
    "@nestjs/websockets": "^7.1.3",
    "apollo-server-express": "^2.14.3",
    "class-transformer": "^0.2.3",
    "graphql": "^15.1.0",
    "graphql-tools": "^6.0.9",
    "hbs": "^4.1.1",
    "mongoose": "^5.9.18",
    "pg": "^8.2.1",
    "redis": "^3.0.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.5",
    "typeorm": "^0.2.25"
  },
  "devDependencies": {
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "@golevelup/nestjs-testing": "^0.1.2",
    "@nestjs/cli": "^7.2.0",
    "@nestjs/schematics": "^7.0.1",
    "@nestjs/testing": "^7.1.3",
    "@types/express": "^4.17.6",
    "@types/jest": "^26.0.0",
    "@types/mongoose": "^5.7.21",
    "@types/node": "^14.0.13",
    "@types/redis": "^2.8.22",
    "@types/socket.io": "^2.1.8",
    "@types/socket.io-client": "^1.4.33",
    "@types/supertest": "^2.0.9",
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "<7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.9",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2",
    "ts-jest": "^26.1.0",
    "ts-loader": "^7.0.5",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "1.18.0",
    "tslint-sonarts": "^1.9.0",
    "typescript": "^3.9.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --ext ts"
    ],
    "*.{md,html,json,js}": [
      "prettier --write"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": "[.]spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
